{
    "name": "phpactor/language-server",
    "description": "Phpactor Language Server",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "daniel@dantleech.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "felixfbecker/language-server-protocol": "^1.0",
        "psr/log": "^1.0",
        "dantleech/argument-resolver": "^1.0",
        "amphp/socket": "^1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "~0.11.0",
        "phpunit/phpunit": "~7.0",
        "friendsofphp/php-cs-fixer": "~2.15.0",

        "phpactor/container": "~1.3",
        "phpactor/console-extension": "~0.1",
        "phpactor/logging-extension": "~0.3",
        "phpactor/file-path-resolver-extension": "~0.2"
    },
    "autoload": {
        "psr-4": {
            "Phpactor\\LanguageServer\\": "lib/",
            "LanguageServerProtocol\\": "protocol/",
            "LanguageServerProtocol\\": "protocol/",
            "Phpactor\\Extension\\LanguageServer\\": "language-server-extension/lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpactor\\LanguageServer\\Tests\\": "tests/",
            "Phpactor\\Extension\\LanguageServer\\Tests\\": "language-server-extension/tests/"
        }
    },
    "scripts": {
        "integrate": [
            "./vendor/bin/phpunit",
            "./vendor/bin/phpstan analyze",
            "./vendor/bin/php-cs-fixer fix"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
